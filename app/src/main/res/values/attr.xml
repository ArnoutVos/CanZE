<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WidgetView">
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="majorTicks" format="integer" />
        <attr name="minorTicks" format="integer" />
        <attr name="showLabels" format="boolean" />
        <attr name="showValue" format="boolean" />
        <attr name="isInverted" format="boolean" />
        <attr name="isAutoScale" format="boolean" />
        <attr name="fieldSID" format="string" />
        <attr name="widget" format="enum">
            <enum name="tacho" value="0"/>
            <enum name="kompass" value="1"/>
            <enum name="bar" value="2"/>
            <enum name="batterybar" value="3"/>
            <enum name="plotter" value="4"/>
            <enum name="label" value="5"/>
            <enum name="timeplot" value="6"/>
        </attr>
        <attr name="text" format="string" />
    </declare-styleable>
</resources>