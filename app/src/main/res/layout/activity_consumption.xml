<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="lu.fisch.canze.activities.ConsumptionActivity"
    android:id="@+id/table"
    android:orientation="vertical"
    >

    <!--
    <TextView
        android:id="@+id/label_motor_torque"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_wheel_torque"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp"
        android:textColor="#000"
        />
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp"
        android:weightSum="3"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                >
                <ProgressBar
                    android:id="@+id/pb_driver_torque_request"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:minHeight="25dp"
                    android:max="1536"
                    android:progressDrawable="@drawable/progressbar_canze_decel"
                    />

                <TextView
                    android:id="@+id/text_driver_torque_request"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Wheel Torque (Nm)"
                    android:layout_marginLeft="4dp"
                    android:textColor="#000000"
                    android:layout_alignRight="@+id/pb_driver_torque_request"
                    android:layout_alignLeft="@+id/pb_driver_torque_request"
                    android:layout_alignBottom="@+id/pb_driver_torque_request"
                    android:layout_alignTop="@+id/pb_driver_torque_request"
                    android:gravity="left"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                >
                <ProgressBar
                    android:id="@+id/MaxBreakTorque"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:paddingTop="2dp"
                    android:layout_gravity="center_horizontal"
                    android:max="1536"
                    android:progress="10"
                    android:progressDrawable="@drawable/progressbar_canze_decel_aim"
                    />
            </RelativeLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/MeanEffectiveAccTorque"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minHeight="25dp"
            android:max="2048"
            android:progress="0"
            android:layout_weight="2"
            android:progressDrawable="@drawable/progressbar_canze_accel"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp"
        android:weightSum="2"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            >
            <ProgressBar
                android:id="@+id/pb_instant_consumption_negative"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:max="150"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_canze_decel"
                />

            <TextView
                android:id="@+id/text_instant_consumption_negative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Instant Consumption (kWh/100km)"
                android:layout_marginLeft="4dp"
                android:textColor="#000000"
                android:layout_alignRight="@+id/pb_instant_consumption_negative"
                android:layout_alignLeft="@+id/pb_instant_consumption_negative"
                android:layout_alignBottom="@+id/pb_instant_consumption_negative"
                android:layout_alignTop="@+id/pb_instant_consumption_negative"
                android:gravity="left"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            >
            <ProgressBar
                android:id="@+id/pb_instant_consumption_positive"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="25dp"
                android:max="150"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_canze_accel"
                />
        </RelativeLayout>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        tools:context="lu.fisch.canze.activities.ConsumptionActivity"
        android:id="@+id/table2"
        >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <lu.fisch.canze.widgets.WidgetView
                android:id="@+id/soh"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                custom:min="-30"
                custom:max="70"
                custom:majorTicks="10"
                custom:minorTicks="5"
                custom:fieldSID="1fd.48,427.49"
                custom:widget="timeplot"
                custom:colorRanges="[
                    {'sid':'1fd.48','color':'#cc00ff','from':-100,'to':-1},
                    {'sid':'1fd.48','color':'#3ee9ff','from':-1,'to':1},
                    {'sid':'1fd.48','color':'#008a1d','from':1,'to':20},
                    {'sid':'1fd.48','color':'#ffaa17','from':20,'to':33},
                    {'sid':'1fd.48','color':'#FF0000','from':33,'to':100}]"
                custom:text="Econometer (kw) / Available energy (kWh)"
                custom:intervals="{'427.49':10000}"
                custom:options="{'1fd.48':'gradient'}"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <lu.fisch.canze.widgets.WidgetView
                android:id="@+id/speed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                custom:min="0"
                custom:max="160"
                custom:minAlt="-160"
                custom:maxAlt="160"
                custom:majorTicks="20"
                custom:minorTicks="10"
                custom:fieldSID="5d7.0,800.6100.24"
                custom:widget="timeplot"
                custom:text="Speed (km/h) / Instant consumption (kWh/100km)"
                custom:intervals="{
                                   }"
                custom:colorRanges="[
                    {'sid':'800.6100.24','color':'#000000','from':-1000,'to':11000},
                    {'sid':'5d7.0','color':'#008a1d','from':0,'to':70},
                    {'sid':'5d7.0','color':'#ffaa17','from':70,'to':100},
                    {'sid':'5d7.0','color':'#FF0000','from':100,'to':130},
                    {'sid':'5d7.0','color':'#cc00ff','from':130,'to':160}
                    ]"
                custom:options="{
                                   '5d7.0':'gradient',
                                   '800.6100.24':'alt'
                                }"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <lu.fisch.canze.widgets.WidgetView
                android:id="@+id/socandco"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                custom:min="0"
                custom:max="160"
                custom:majorTicks="20"
                custom:minorTicks="10"
                custom:fieldSID="654.42,654.25"
                custom:widget="timeplot"
                custom:text="Available distance (km) / State of Charge (%)"
                custom:intervals="{
                                   '654.42':10000,
                                   '654.25':60000
                                   }"
                custom:colorRanges="[
                    {'sid':'654.25','color':'#000000','from':-1000,'to':11000}
                    ]"
                custom:options="{
                                }"
                />

        </TableRow>

    </TableLayout>
</LinearLayout>

