<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:keepScreenOn="true"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lu.fisch.canze.DrivingActivity">

    <TextView
        android:id="@+id/label_pedal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_pedal"
        android:textColor="#000"
        />
    <ProgressBar
        android:id="@+id/pedalBar"
        android:layout_below="@+id/label_pedal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="25dp"
        android:max="100"
        android:progressDrawable="@drawable/progressbar_canze"
        />

    <TextView
        android:id="@+id/label_motor_torque"
        android:layout_below="@+id/pedalBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_motor_torque"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        />
    <ProgressBar
        android:id="@+id/MeanEffectiveTorque"
        android:layout_below="@+id/label_motor_torque"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="25dp"
        android:max="100"
        android:progressDrawable="@drawable/progressbar_canze"
        />

    <TextView
        android:id="@+id/HeaderDriving"
        android:layout_below="@+id/MeanEffectiveTorque"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/header_Driving"
        android:textColor="#000"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textRealSpeed"
        android:layout_below="@+id/HeaderDriving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/default_realSpeed"
        android:textColor="#000"
        android:textSize="96sp"
        android:gravity="center_horizontal" />

    <!-- <TextView
        android:id="@+id/textTorque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/default_Torque"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textRealSpeed"
        android:textColor="#000"
        android:textSize="48sp" /> -->


        <TextView
            android:id="@+id/LabelKmToDest"
            android:layout_below="@+id/textRealSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_KmToDest"
            android:layout_alignParentLeft="true"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textKmToDest"
            android:layout_below="@+id/textRealSpeed"
            android:text="@string/default_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/LabelKmAVailAtDest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_KmAvailAtDest"
            android:layout_below="@id/LabelKmToDest"
            android:layout_alignParentLeft="true"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textKmAVailAtDest"
            android:text="@string/default_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textKmToDest"
            android:layout_alignParentRight="true"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/LabelSOC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_SOC"
            android:layout_below="@id/LabelKmAVailAtDest"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/textSOC"
            android:text="@string/default_SOC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textKmAVailAtDest"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/LabelDcPwr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_DcPwr"
            android:layout_below="@id/LabelSOC"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/textDcPwr"
            android:text="@string/default_DcPwr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textSOC"
            android:layout_alignParentRight="true"
            />

    <!-- debug line -->
    <TextView
        android:id="@+id/textDebug"
        android:text="@string/default_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/HeaderDebug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_Debug"
        android:layout_above="@id/textDebug"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        />

</RelativeLayout>