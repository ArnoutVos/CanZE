<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="lu.fisch.canze.TestX10Activity"
    android:stretchColumns="3"
    android:id="@+id/table"
    >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <lu.fisch.canze.widgets.WidgetView
            android:id="@+id/accelerationPedal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            custom:min="0"
            custom:max="125"
            custom:majorTicks="25"
            custom:minorTicks="5"
            custom:fieldSID="186.40"
            custom:widget="tacho"
            custom:text="Acceleration pedal"
            />

        <lu.fisch.canze.widgets.WidgetView
            android:id="@+id/recup2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            custom:min="-400"
            custom:max="1647"
            custom:majorTicks="100"
            custom:minorTicks="20"
            custom:fieldSID="18a.27"
            custom:widget="tacho"
            custom:text="FrictionTorque"
            />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <lu.fisch.canze.widgets.WidgetView
            android:id="@+id/recup3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            custom:min="-4094"
            custom:max="4094"
            custom:majorTicks="1024"
            custom:minorTicks="256"
            custom:fieldSID="130.20"
            custom:widget="kompass"
            custom:text="ElecBrakeWheelsTorqueRequest"
            />

        <lu.fisch.canze.widgets.WidgetView
            android:id="@+id/recup4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            custom:min="-4094"
            custom:max="4094"
            custom:majorTicks="1024"
            custom:minorTicks="256"
            custom:fieldSID="1f8.28"
            custom:widget="kompass"
            custom:text="ElecBrakeWheelsTorqueApplied"
            />

    </TableRow>

</TableLayout>

