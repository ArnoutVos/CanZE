<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lu.fisch.canze.TextActivity">

    <TextView
        android:id="@+id/LabelMaxCharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_max_charge"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/text_max_charge"
        android:text="@string/default_max_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/LabelMaxPilot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_max_pilot"
        android:layout_below="@id/LabelMaxCharge"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/text_max_pilot"
        android:text="@string/default_max_pilot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_max_charge"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/LabelPedal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_pedal"
        android:layout_below="@id/LabelMaxPilot"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/textPedal"
        android:text="@string/default_pedal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_max_pilot"
        android:layout_alignParentRight="true"
        />


    <!-- debug line -->
    <TextView
        android:id="@+id/textDebug"
        android:text="@string/default_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>